@import 'mixins'

#app .dashboard
  hbox()
  border-radius(5px)
  overflow: hidden
  z-index: 1
  position: relative
  
  textarea
    resize: vertical
    
  .email
    -webkit-border-radius: 0 5px 5px 0
    
    header
      -webkit-border-radius: 0 5px 0 0
      
  .info
    -webkit-border-radius: 5px 0 0 5px
  
    header
      -webkit-border-radius: 5px 0 0 0
      
  .info, .calendar, .email
    width: 250px
    background: #FFF
    vbox()
    position: relative
    
    header
      inset-line(0.7)
      vbg-gradient(lighten(#F4F4F4, 10%), darken(#F4F4F4, 5%))
      border-bottom: 1px solid lighten(#CCCCCC, 10%)
      height: 35px
      line-height: 35px
      padding: 0 10px

      h2
        margin: 0
        font: 20px arial,lucida,helvetica,arial,sans-serif
        font-weight: normal
        text-shadow: 0 1px 0 #FFF
        line-height: 36px
        float: left
        
      img
        margin: 6px 8px 0 0
        float: left
        width: 25px
        height: 25px
        border-radius(5px)
        box-shadow(0px, 1px, 2px, rgba(0, 0, 0, 0.3))
        
        
    article
      padding: 5px
      box-flex(1)
      vbox()
      overflow: hidden
      
    textarea
      display: block
      width: 100%
      box-flex(1)
      border-box()
      
  .calendar, .email
    padding-left: 6px
  
    &:after
      content: ''
      display: block
    
      hbg-gradient(lighten(#F4F4F4, 10%), darken(#F4F4F4, 5%))
      width: 6px;
      border: 1px solid rgba(0, 0, 0, 0.1)
      border-width: 0 1px 0 1px
      border-right-color: rgba(0, 0, 0, 0.2)
    
      position: absolute
      left: 0
      top: 0
      bottom: 0
      
    time
      font-size: 11px
      color: darken(#CCC, 10%)
      
      &:before
        content: '@'
      
  .info
    box-shadow: inset 1px 1px 2px rgba(0, 0, 0, 0.1)
    background: #F4F4F4
    -webkit-transform: translate3d(0px, 0px, 0px);
    z-index: 100
    
  .calendar
    z-index: 50
    
  .email
    z-index: 25
    
  .empty
    color: darken(#CCC, 10%);
    overflow: hidden
    content: 'Empty...'
    display: block
    text-align: center
    margin: 15px 0
            
  .item
    border-bottom: 1px solid lighten(#D1D1D1, 20%)
    overflow: hidden
    cursor: pointer
    position: relative
    
    a
      display: block
      padding: 14px